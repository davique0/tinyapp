<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-primary ">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if(!user) { %>
      <form class="d-flex" action="/login" method="POST">
        
          <label for="email"></label>
          <input
          class="form-control me-2"
          type="email"
          name="email"
          placeholder="name@email.com"
          style="width: 200px; margin: .1em"
          />

          <label for="password"></label>
          <input
          class="form-control me-2"
          type="password"
          name="password"
          style="width: 200px; margin: .1em"
          />
          <button type="submit" class="btn btn-outline-light">Login</button>
      </form>

   <% } else { %>
    <span class="nav-item nav-link"><%= user.userEmail %> logged in</span>
    <form class="d-flex" action="/logout" method="POST">
    <button type="submit" class="btn btn-outline-danger">Logout</button>
  </form>
   <% } %>
  </nav>
</header>